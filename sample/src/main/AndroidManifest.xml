<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bosong.sample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.VerticalGridRecyclerActivity"
            android:label="@string/activity_vertical_grid" />
        <activity android:name=".activity.StaggeredRecyclerActivity"
            android:label="@string/activity_staggered_grid"/>
        <activity android:name=".activity.LinearActivity"
            android:label="@string/activity_linear"></activity>
    </application>

</manifest>